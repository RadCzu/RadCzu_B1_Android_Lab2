<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/list_editor"
        android:layout_width="386dp"
        android:layout_height="90dp"
        android:ems="10"
        android:hint="write a list of numbers: (example: 1, 2, 3)"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <RadioGroup
        android:layout_width="241dp"
        android:layout_height="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_editor"
        app:layout_constraintVertical_bias="0.044">

        <RadioButton
            android:id="@+id/bubble_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:clickable="true"
            android:onClick="setDesc"
            android:rotationX="0"
            android:text="Bubble sort"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/quicksort_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="setDesc"
            android:text="Quicksort"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/algorithm_desc"
        android:layout_width="382dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_editor"
        app:layout_constraintVertical_bias="0.268" />

    <Button
        android:id="@+id/sort"
        android:layout_width="206dp"
        android:layout_height="84dp"
        android:onClick="sort"
        android:text="Sort"
        android:textColorLink="#38D532"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/algorithm_desc"
        app:layout_constraintVertical_bias="0.111" />

    <TextView
        android:id="@+id/input"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:text="input:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sort"
        app:layout_constraintVertical_bias="0.212" />

    <TextView
        android:id="@+id/result"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:text="output:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input"
        app:layout_constraintVertical_bias="0.191" />

</androidx.constraintlayout.widget.ConstraintLayout>